<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.zijkplayer.voidplayer.IjkVideoView
        android:id="@+id/zLiveView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView0"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/min_bunk"
        android:gravity="center"
        android:text="聊天室"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtView1"
        app:layout_constraintTop_toBottomOf="@+id/zLiveView" />

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/min_bunk"
        android:gravity="center"
        android:text="排行榜"
        android:textColor="@color/red"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/txtView0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zLiveView" />


</android.support.constraint.ConstraintLayout>